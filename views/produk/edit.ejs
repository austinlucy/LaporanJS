<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Produk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex justify-content-center mt-4 mb-4">
        <div class="container py-4 bg-light p-4 rounded">
            <h1 class="mb-4 text-center">Edit Produk</h1>

            <form action="/produk/update/<%= produk.id_produk %>" method="post">
                <div class="mb-3">
                    <label for="nama_produk">Nama Produk</label>
                    <input type="text" name="nama_produk" id="nama_produk" class="form-control" value="<%= produk.nama_produk %>" required>
                </div>

                <div class="mb-3">
                    <label for="harga_produk">Harga Produk</label>
                    <input type="text" name="harga_produk" id="harga_produk" class="form-control" value="<%= produk.harga_produk %>" required>
                </div>

                <div class="mb-3">
                    <label for="id_kategori">Kategori</label>
                    <select name="id_kategori" id="id_kategori" class="form-control">
                        <% for(var i = 0; i < kategori.length; i++) { %>
                            <option value="<%= kategori[i].id_kategori %>" 
                                <% if (kategori[i].id_kategori == produk.id_kategori) { %> selected <% } %>>
                                <%= kategori[i].nama_kategori %>
                            </option>
                        <% } %>
                    </select>
                </div>
                
                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Simpan Perubahan</button>
                    <a href="/produk" class="btn btn-secondary">Batal</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
