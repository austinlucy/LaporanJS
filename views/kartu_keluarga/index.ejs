<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Kartu Keluarga</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Data Kartu Keluarga</h1>

        <div class="mb-3 text-end">
            <a href="/kartu_keluarga/create" class="btn btn-primary">Tambah Data</a>
        </div>

        <div class="card shadow-sm p-4">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>No KK</th>
                        <th>Alamat</th>
                        <th>RT</th>
                        <th>RW</th>
                        <th>Kode Pos</th>
                        <th>Desa/Kelurahan</th>
                        <th>Kecamatan</th>
                        <th>Kabupaten/Kota</th>
                        <th>Provinsi</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(row) { %>
                        <tr>
                            <td><%= row.no_kk %></td>
                            <td><%= row.alamat %></td>
                            <td><%= row.rt %></td>
                            <td><%= row.rw %></td>
                            <td><%= row.kode_pos %></td>
                            <td><%= row.desa_kelurahan %></td>
                            <td><%= row.kecamatan %></td>
                            <td><%= row.kabupaten_kota %></td>
                            <td><%= row.provinsi %></td>
                            <td>
                                <a href="/kartu_keluarga/edit/<%= row.no_kk %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/kartu_keluarga/delete/<%= row.no_kk %>" class="btn btn-danger btn-sm" onclick="return confirm('Yakin ingin menghapus?')">Hapus</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>